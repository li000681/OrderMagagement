@model FinalProject.Models.ViewModel.OrderItemSelection

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal? cost = 0;
}

<h1>Details</h1>

<div>
    <h4>Thank you for your shopping, @Model.Customer.Name!</h4>
    <h4>Your Order Id: @Model.Order.OrId</h4>
    <hr />
    
    <table class="table table-information table-striped table-hover">
    <thead>
        <tr>
            <th>
                <p class="text-primary">Name</p>
            </th>
            <th>
                <p class="text-primary">Price</p>
            </th>
            <th>
                <p class="text-primary">Quantity</p>
            </th>
            
            
        </tr>
    </thead>
    <tbody>
            
                
            @foreach (var item in Model.ItemSelections)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item.Price)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>

                </tr>
                {
                    cost += @item.Item.Price * @item.Quantity;
                }
            }

        

    </tbody>
</table>
</div>
<h4 class="text-primary">Total cost is @cost.GetValueOrDefault().ToString("c")</h4>
<div>
    
    <a asp-action="Index">Back to List</a>
</div>

